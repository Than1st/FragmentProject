<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FirstFragment">

    <ImageView
        android:id="@+id/iv_gambar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/pdi"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/firstfragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/percaya_diri_indonesia_perjuangan_text"
        android:textSize="20sp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_gambar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/nama_anggota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/firstfragment"
        app:layout_constraintStart_toStartOf="@id/firstfragment"
        app:layout_constraintEnd_toEndOf="@id/firstfragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>